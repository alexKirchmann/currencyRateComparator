<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/table_2_row_template"
android:gravity="center">

<TextView
    android:id="@+id/table_2_currency"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingHorizontal="20dp"
    android:paddingVertical="2.5dp"
    android:text="@string/table_2_row_1_text_1"
    android:textAlignment="viewStart"
    android:textColor="@color/black"
    android:textSize="32sp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/table_2_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:paddingVertical="2.5dp"
        android:text="@string/table_2_row_1_text_2"
        android:textColor="@color/black"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/table_2_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:paddingVertical="2.5dp"
        android:text="@string/table_2_row_1_text_3"
        android:textColor="@color/gray"
        android:textSize="32sp"/>
</LinearLayout>
</TableRow>